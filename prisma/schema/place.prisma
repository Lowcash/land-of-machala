model Place {
  id       String @id
  i18n_key String

  type PlaceType

  x_min Int
  x_max Int
  y_min Int
  y_max Int

  armory      Armory?   @relation(fields: [armory_id], references: [id])
  armory_id   String?
  bank        Bank?     @relation(fields: [bank_id], references: [id])
  bank_id     String?
  hospital    Hospital? @relation(fields: [hospital_id], references: [id])
  hospital_id String?

  enemy_place EnemyInPlace[]

  @@index([armory_id])
  @@index([bank_id])
  @@index([hospital_id])
}

enum PlaceType {
  SAFEHOUSE
  FOREST
  DESERT
  MOUNTAIN
  CEMETERY
  FARM
  HILLS
  ROAD
  SUBURB
  CASTLE
  SWAMP
  LAKE
  CAVE
  VILLAGE
  TOWN
  DUNGEON
}
