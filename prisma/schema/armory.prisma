model Armory {
  id       String @id
  i18n_key String

  armors  ArmorInArmory[]
  weapons WeaponInArmory[]
  places  Place[]
}

model ArmorInArmory {
  id String @id @default(uuid())

  price Int

  armor     Armor  @relation(fields: [armor_id], references: [id], onDelete: Cascade)
  armor_id  String
  armory    Armory @relation(fields: [armory_id], references: [id], onDelete: Cascade)
  armory_id String

  @@index([armor_id])
  @@index([armory_id])
}

model WeaponInArmory {
  id String @id @default(uuid())

  price Int

  weapon    Weapon @relation(fields: [weapon_id], references: [id], onDelete: Cascade)
  weapon_id String
  armory    Armory @relation(fields: [armory_id], references: [id], onDelete: Cascade)
  armory_id String

  @@index([weapon_id])
  @@index([armory_id])
}
