model Wearable {
  id String @id @default(uuid())

  head                 ArmorInInventory?  @relation("head_armor", fields: [head_armor_id], references: [id])
  head_armor_id        String?
  shoulder             ArmorInInventory?  @relation("shoulder_armor", fields: [shoulder_armor_id], references: [id])
  shoulder_armor_id    String?
  chest                ArmorInInventory?  @relation("chest_armor", fields: [chest_armor_id], references: [id])
  chest_armor_id       String?
  hands                ArmorInInventory?  @relation("hands_armor", fields: [hands_armor_id], references: [id])
  hands_armor_id       String?
  pants                ArmorInInventory?  @relation("pants_armor", fields: [pants_armor_id], references: [id])
  pants_armor_id       String?
  boots                ArmorInInventory?  @relation("boots_armor", fields: [boots_armor_id], references: [id])
  boots_armor_id       String?
  left_hand            WeaponInInventory? @relation("left_hand_weapon", fields: [left_hand_weapon_id], references: [id])
  left_hand_weapon_id  String?
  right_hand           WeaponInInventory? @relation("right_hand_weapon", fields: [right_hand_weapon_id], references: [id])
  right_hand_weapon_id String?

  users User[]

  @@index([head_armor_id])
  @@index([shoulder_armor_id])
  @@index([chest_armor_id])
  @@index([hands_armor_id])
  @@index([pants_armor_id])
  @@index([boots_armor_id])
  @@index([left_hand_weapon_id])
  @@index([right_hand_weapon_id])
}

model Armor {
  id       String @id
  i18n_key String

  type ArmorType

  armor        Int
  strength     Int
  agility      Int
  intelligence Int

  armors_loot      ArmorInLoot[]
  armors_armory    ArmorInArmory[]
  armors_inventory ArmorInInventory[]
  armors_bank      ArmorInBank[]
  enemy_loot       EnemyLoot[]
}

enum ArmorType {
  HEAD
  SHOULDER
  CHEST
  HANDS
  PANTS
  BOOTS
}

model Weapon {
  id       String @id
  i18n_key String

  damage_from Int
  damage_to   Int

  weapons_loot      WeaponInLoot[]
  weapons_armory    WeaponInArmory[]
  weapons_inventory WeaponInInventory[]
  weapons_bank      WeaponInBank[]
  enemy_loot        EnemyLoot[]
}
