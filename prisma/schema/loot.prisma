model Loot {
  id String @id @default(uuid())

  money Int?
  xp    Int?

  user         User[]
  armors_loot  ArmorInLoot[]
  weapons_loot WeaponInLoot[]
}

model ArmorInLoot {
  id String @id @default(uuid())

  armor    Armor  @relation(fields: [armor_id], references: [id], onDelete: Cascade)
  armor_id String
  loot     Loot   @relation(fields: [loot_id], references: [id], onDelete: Cascade)
  loot_id  String

  @@index([armor_id])
  @@index([loot_id])
}

model WeaponInLoot {
  id String @id @default(uuid())

  weapon    Weapon @relation(fields: [weapon_id], references: [id], onDelete: Cascade)
  weapon_id String
  loot      Loot   @relation(fields: [loot_id], references: [id], onDelete: Cascade)
  loot_id   String

  @@index([loot_id])
  @@index([weapon_id])
}
