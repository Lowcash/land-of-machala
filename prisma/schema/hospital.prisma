model Hospital {
  id       String @id
  i18n_key String

  healing_price Int

  places           Place[]
  potions_hospital PotionInHospital[]
}

model PotionInHospital {
  id String @id @default(uuid())

  price Int

  potion      Potion   @relation(fields: [potion_id], references: [id], onDelete: Cascade)
  potion_id   String
  hospital    Hospital @relation(fields: [hospital_id], references: [id], onDelete: Cascade)
  hospital_id String

  @@index([potion_id])
  @@index([hospital_id])
}
