model Bank {
  id       String @id
  i18n_key String

  accounts BankAccount[]
  places   Place[]
}

model BankAccount {
  id String @id @default(uuid())

  money Int @default(0)

  bank    Bank   @relation(fields: [bank_id], references: [id], onDelete: Cascade)
  bank_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id String

  armors  ArmorInBank[]
  weapons WeaponInBank[]
  potions PotionInBank[]

  @@unique([bank_id, user_id])
  @@index([bank_id])
  @@index([user_id])
}

model ArmorInBank {
  id String @id @default(uuid())

  armor           Armor       @relation(fields: [armor_id], references: [id], onDelete: Cascade)
  armor_id        String
  bank_acount     BankAccount @relation(fields: [bank_account_id], references: [id], onDelete: Cascade)
  bank_account_id String

  @@index([armor_id])
  @@index([bank_account_id])
}

model WeaponInBank {
  id String @id @default(uuid())

  weapon          Weapon      @relation(fields: [weapon_id], references: [id], onDelete: Cascade)
  weapon_id       String
  bank_account    BankAccount @relation(fields: [bank_account_id], references: [id], onDelete: Cascade)
  bank_account_id String

  @@index([weapon_id])
  @@index([bank_account_id])
}

model PotionInBank {
  id String @id @default(uuid())

  potion          Potion      @relation(fields: [potion_id], references: [id], onDelete: Cascade)
  potion_id       String
  bank_acount     BankAccount @relation(fields: [bank_account_id], references: [id], onDelete: Cascade)
  bank_account_id String

  @@index([potion_id])
  @@index([bank_account_id])
}
